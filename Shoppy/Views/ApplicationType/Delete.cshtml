@model Shoppy.Models.ApplicationType
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form method="post" asp-action="DeletePost">
    <div asp-validation-summary="ModelOnly">  </div>
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h1>Delete Category</h1>

        </div>


        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                        <span asp-validation-for="Name"></span>
                    </div>

                </div>
              
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col ">
                            <input type="submit" class="btn btn-success form-control" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger form-check form-control" asp-action="Index">  Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


